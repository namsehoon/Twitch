extends layouts/main
include mixins/videoBlock
include mixins/imageBlock

block content
    .home-videos
        each video in videos
            +videoBlock({
                id:video.id,
                videoFile:video.fileUrl,
                imageFile:`${video.imagefileUrls[0].imagefileUrl}`,
                title:video.title,
                views:video.views,
                game:video.game
            })
    .home-images
        each image in images
            +imageBlock({
                id:image.id,
                imageFile:image.imageFileUrl
            })