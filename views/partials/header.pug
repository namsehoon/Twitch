        .header__column
            a(href=routes.home)
                i.fab.fa-twitch
        .header__column
            form(action=routes.search, method="get")
                input(type="text" placeholder="search", name="search")
                button.searchBtn
                    i.fa.fa-search
        .header__column
            ul
                if !user.isAthenticated
                    li                   
                        a(href=routes.login) 
                            button.loginBtn Login
                    li
                        a(href=routes.join)
