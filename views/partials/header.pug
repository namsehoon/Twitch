header.header
    .header__header
        .header__column
            a(href=routes.home)
                i.fab.fa-twitch
        .header__column
            form(action=routes.search, method="get")
                input(type="text" placeholder="search", name="search")
                button.searchBtn
                    i.fa.fa-search
        .header__column
            ul
                if !user
                    li                   
                        a(href=routes.login) 
                            button.loginBtn Login
                    li
                        a(href=routes.join)
                            button.joinBtn Join
                else
                    .dropDown
                        button.dropBtn
                            i.fas.fa-bars
                        .dropDown-content
                            a(href=routes.userDetail(user.id)) User Detail
                            a(href=`${routes.video}/upload`) Upload
                            a(href=routes.logout) Log Out 
